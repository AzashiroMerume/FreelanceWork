<div class='my-3 p-3 border rounded shadow-sm'>
  <div class='border-bottom'>
    {{#if isCategory}}
      <h2 class='special-font-1 text-primary'>#{{category}}</h2>
    {{else}}
      <h2 class='special-font-1'>Recent jobs</h2>
    {{/if}}
  </div>
  <div class='d-flex flex-column'>
    {{#if jobs}}

      {{#if isCategory}}
        {{#each jobs}}
          <div class='job p-3'>
            <h3 class="special-font-1">{{title}}</h3>
            <p class='lead'>{{shortDescription}}</p>
            {{#each categories}}
              <a href='{{this}}' class="mx-2">{{this}}</a>
            {{/each}}
            <div class="mt-3">
            <a href='../{{_id}}' class='btn btn-primary'>Read more</a>
          </div><hr>
          </div>
        {{/each}}

      {{else}}

      {{#each jobs}}
        <div class='job p-3'>
          <h2>{{title}}</h2>
          <p class='lead'>{{shortDescription}}</p>
          {{#each categories}}
            <a href='jobs/category/{{this}}' class="mx-2">{{this}}</a>
          {{/each}}
          <div class="mt-3">
            <a href='jobs/{{_id}}' class='btn btn-primary'>Read more</a>
          </div><hr>
        </div>
      {{/each}}

      {{/if}}

    {{else}}
      <p>No Posts</p>
    {{/if}}
  </div>
</div>