<div>
    <form method="post">
      <div class="input-group mb-3">
        <input
          type="text"
          class="form-control"
          name="search"
          placeholder="user name"
          aria-label="user name"
          aria-describedby="basic-addon2"
        />
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">Button</button>
        </div>
      </div>
    </form>
  </div>
  <div class="d-flex flex-column">
    <div class="results">
      {{#if founded}}
        <h3 class="text-secondary">Results:</h3>
        {{#each founded}}
          <div class="result border py-3 px-4 mb-3">
            <h3 class="special-font-1">{{firstname}} {{surname}}</h3>
            <p class="lead">{{userType}}</p>
            <p class="lead text-success">Points:
              {{#if points}}{{points}}{{else}}0{{/if}}</p>
            <div class="d-flex">
              <button class="btn btn-primary mr-2">Check</button>
              <form method="post">
                  <button type="submit" class="btn btn-danger mx-2" name="user" value="{{_id}}">Delete User</button>
              </form>
            </div>
          </div>
        {{/each}}
      {{/if}}
</div>