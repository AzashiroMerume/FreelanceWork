<div class="my-3 p-3 border rounded shadow-sm">
  <div class="border-bottom">
  </div>
  <div class="d-flex flex-column">
    {{#if projects}}

      {{#if isCategory}}
        {{#each projects}}
          <div class="job p-3">
            <h3 class="special-font-1">{{title}}</h3>
            <p class="lead">{{shortDescription}}</p>
            {{#each categories}}
              <a href="{{this}}" class="mx-2">{{this}}</a>
            {{/each}}
            <div class="mt-3">
              <a href="../{{_id}}" class="btn btn-primary">Read more</a>
            </div><hr />
          </div>
        {{/each}}

      {{else}}

        {{#each projects}}
          <div class="job p-3">
            <h2>{{title}}</h2>
            <p class="lead">{{shortDescription}}</p>
            {{#each categories}}
              <a href="jobs/category/{{this}}" class="mx-2">{{this}}</a>
            {{/each}}
            <div class="mt-3 d-flex">
              <a href="jobs/{{_id}}" class="btn btn-success mx-2">Read more</a>
              <a href="updatepost/{{_id}}" class="btn btn-primary mx-2">Update
                post</a>
              <form action="deletepost/{{_id}}" method="post">
                <button class="btn btn-danger mx-2">Delete post</button>
              </form>
            </div><hr />
          </div>
        {{/each}}

      {{/if}}

    {{else}}
      <p>No Posts</p>
    {{/if}}
  </div>
</div>