<div>
    <form method="post">
      <div class="input-group mb-3">
        <input
          type="text"
          class="form-control"
          name="search"
          placeholder="posts"
          aria-label="posts"
          aria-describedby="basic-addon2"
        />
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">Button</button>
        </div>
      </div>
    </form>
  </div>
  <div class="d-flex flex-column">
    <div class="results">
      {{#if founded}}
        <h3 class="text-secondary">Results:</h3>

        <div class='job p-3'>
        <h2>{{founded.title}}</h2>
        <p class='lead'>{{founded.shortDescription}}</p>
        {{#each founded.categories}}
            <a href='jobs/category/{{this}}' class="mx-2">{{this}}</a>
        {{/each}}
        <div class="mt-3 d-flex">
            <a href='jobs/{{founded._id}}' class='btn btn-primary'>Read more</a>
            <form method="post">
            <button type="submit" class="btn btn-danger mx-2" name="post" value="{{founded._id}}">Delete post</button>
            </form>
        </div><hr>
        </div>
    {{else}}
      <p class="lead text-danger">There is no jobs</p>
    {{/if}}
</div>